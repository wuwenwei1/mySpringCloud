    <result column="remittanceReviewId" jdbcType="BIGINT" property="remittanceReviewId" />
    <result column="remittanceReviewFileName" jdbcType="VARCHAR" property="remittanceReviewFileName" />
    <result column="remittanceReviewFileUrl" jdbcType="VARCHAR" property="remittanceReviewFileUrl" />
  </resultMap>

