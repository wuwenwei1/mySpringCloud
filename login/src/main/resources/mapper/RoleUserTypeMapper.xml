<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.demo.security.dao.RoleUserTypeMapper">
  <resultMap id="BaseResultMap" type="org.demo.security.entity.RoleUserType">
    <id column="roleUserTypeId" jdbcType="BIGINT" property="roleUserTypeId" />
    <result column="roleId" jdbcType="BIGINT" property="roleId" />
    <result column="userTypeId" jdbcType="BIGINT" property="userTypeId" />
  </resultMap>

  <insert id="addRoleUserType" >
    INSERT INTO role_usertype (roleId, userTypeId)
    VALUES
    <foreach collection="userTypeIds" item="userTypeId" index="index" separator=",">
      (${roleId}, ${userTypeId})
    </foreach>
  </insert>

  <delete id="delByUserTypeId">
    DELETE  FROM role_usertype WHERE userTypeId=${userTypeId};
  </delete>

  <delete id="delByRoleId">
    DELETE  FROM role_usertype WHERE roleId=${roleId};
  </delete>
</mapper>