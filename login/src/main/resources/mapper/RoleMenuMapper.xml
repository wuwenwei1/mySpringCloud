<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.demo.security.dao.RoleMenuMapper">
  <resultMap id="BaseResultMap" type="org.demo.security.entity.RoleMenu">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="roleId" jdbcType="BIGINT" property="roleId" />
    <result column="menuId" jdbcType="BIGINT" property="menuId" />
  </resultMap>

  <delete id="delByMenuId">
    DELETE  FROM role_menu WHERE menuId=${menuId};
  </delete>

  <delete id="delByRoleId">
    DELETE  FROM role_menu WHERE roleId=${roleId};
  </delete>

  <insert id="addRoleMenu" >
    INSERT INTO role_menu (roleId, menuId)
    VALUES
    <foreach collection="menuIds" item="menuId" index="index" separator=",">
      (${roleId}, ${menuId})
    </foreach>
  </insert>
</mapper>